@{
  Layout = "_Layout";
}

@using IndependentContracts.Models;
@model List<IndependentContracts.Models.Contractor>;

<h1>Contractors</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No contractors Have Been Added Yet</h3>
}

@foreach (Contractor contractor in Model)
{
  <div class="Contractor">
    <p>@Html.ActionLink(contractor.Alias, "Details", new { id = contractor.ContractorId})</p>
  </div>
}

<hr />
<p>@Html.ActionLink("Add Contractor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>